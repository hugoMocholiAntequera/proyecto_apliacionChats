{% extends 'base.html.twig' %}

{% block title %}Página no encontrada - Error 404{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        .error-container {
            background: white;
            border-radius: 20px;
            padding: 4rem 3rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 600px;
            width: 100%;
            text-align: center;
        }

        .error-icon {
            font-size: 8rem;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
        }

        .error-code {
            font-size: 6rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            line-height: 1;
        }

        .error-title {
            font-size: 2rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 1rem;
        }

        .error-description {
            font-size: 1.125rem;
            color: #6b7280;
            margin-bottom: 2rem;
        }

        .btn-home {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
        }

        .btn-home:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .btn-back {
            background: #f3f4f6;
            color: #1f2937;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
            margin-left: 1rem;
        }

        .btn-back:hover {
            background: #e5e7eb;
            color: #1f2937;
        }

        .suggestions {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid #f3f4f6;
            text-align: left;
        }

        .suggestion-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 0.75rem;
            margin-bottom: 0.5rem;
            background: #f9fafb;
            border-radius: 8px;
            text-decoration: none;
            color: #1f2937;
            transition: all 0.3s;
        }

        .suggestion-item:hover {
            background: #f3f4f6;
            transform: translateX(5px);
        }

        .suggestion-icon {
            color: var(--primary-color);
            font-size: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="error-container">
    <div class="error-icon">
        <i class="fas fa-search"></i>
    </div>
    
    <h1 class="error-code">404</h1>
    
    <h2 class="error-title">Página no encontrada</h2>
    
    <p class="error-description">
        Lo sentimos, la página que estás buscando no existe o ha sido movida.
    </p>

    <div class="mb-4">
        <a href="{{ path('app_home') }}" class="btn-home">
            <i class="fas fa-home"></i> Ir al Inicio
        </a>
        <a href="javascript:history.back()" class="btn-back">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>

    <div class="suggestions">
        <h5 class="mb-3">Páginas que podrías estar buscando:</h5>
        
        <a href="{{ path('app_login') }}" class="suggestion-item">
            <div class="suggestion-icon">
                <i class="fas fa-sign-in-alt"></i>
            </div>
            <div>
                <strong>Iniciar Sesión</strong>
                <p class="mb-0 text-muted small">Accede a tu cuenta</p>
            </div>
        </a>

        <a href="{{ path('app_register') }}" class="suggestion-item">
            <div class="suggestion-icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <div>
                <strong>Registrarse</strong>
                <p class="mb-0 text-muted small">Crea una nueva cuenta</p>
            </div>
        </a>

        <a href="{{ path('app_api') }}" class="suggestion-item">
            <div class="suggestion-icon">
                <i class="fas fa-code"></i>
            </div>
            <div>
                <strong>Documentación API</strong>
                <p class="mb-0 text-muted small">Explora nuestros endpoints</p>
            </div>
        </a>
    </div>
</div>
{% endblock %}
