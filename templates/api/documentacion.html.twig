{% block javascripts %}
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Prism.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-json.min.js"></script>
    
    <script>
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Scroll to top button
        window.addEventListener('scroll', function() {
            const scrollBtn = document.querySelector('.scroll-to-top');
            if (window.pageYOffset > 300) {
                scrollBtn.classList.add('visible');
            } else {
                scrollBtn.classList.remove('visible');
            }
        });

        // Copy code functionality
        function copyCode(button) {
            const codeBlock = button.closest('.code-block').querySelector('code');
            const text = codeBlock.textContent;
            
            navigator.clipboard.writeText(text).then(() => {
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Copiado';
                button.style.background = '#10b981';
                button.style.borderColor = '#10b981';
                button.style.color = 'white';
                
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.style.background = 'transparent';
                    button.style.borderColor = '#475569';
                    button.style.color = '#94a3b8';
                }, 2000);
            });
        }

        // Copy response by element id
        function copyResponse(codeId) {
            const codeEl = document.getElementById(codeId);
            if (!codeEl) return;
            navigator.clipboard.writeText(codeEl.textContent || '').then(() => {
                // small visual feedback could be added here
            });
        }

        // Render JSON response into a code block and highlight
        function renderResponse(codeId, obj, statusElId, statusText, ok) {
            const codeEl = document.getElementById(codeId);
            const statusEl = document.getElementById(statusElId);
            if (codeEl) {
                codeEl.textContent = JSON.stringify(obj, null, 2);
                if (window.Prism && Prism.highlightElement) {
                    Prism.highlightElement(codeEl);
                }
            }
            if (statusEl) {
                statusEl.style.display = 'inline-block';
                statusEl.textContent = statusText || '';
                statusEl.classList.remove('response-success', 'response-error');
                statusEl.classList.add(ok ? 'response-success' : 'response-error');
            }
        }

        // Handler for Conexión form
        function handleConexion(e) {
            e.preventDefault();
            const apiKey = (document.getElementById('apiKey')||{}).value || '';
            if (!apiKey.trim()) {
                renderResponse('resp-conexion', {success:false,message:'API Key requerida',error:{apiKey:'Campo obligatorio'}}, 'resp-conexion-status', '400 Bad Request', false);
                return;
            }
            if (apiKey.trim().length < 32) {
                renderResponse('resp-conexion', {success:false,message:'API Key inválida',error:null}, 'resp-conexion-status', '401 Unauthorized', false);
                return;
            }
            renderResponse('resp-conexion', {success:true,message:'Conexión exitosa',data:{apiStatus:'Activa',timestamp:new Date().toISOString()}}, 'resp-conexion-status', '200 OK', true);
        }

        // Basic email validator
        function isValidEmail(email) {
            return /^\S+@\S+\.\S+$/.test(email);
        }

        // Handler for Login form
        function handleLogin(e) {
            e.preventDefault();
            const email = (document.getElementById('login-email')||{}).value || '';
            const password = (document.getElementById('login-password')||{}).value || '';

            // Missing fields
            const missing = [];
            if (!email.trim()) missing.push('email');
            if (!password) missing.push('password');
            if (missing.length) {
                renderResponse('resp-login', {success:false,message:'Datos incompletos',error:{fields: missing}}, 'resp-login-status', '400 Bad Request', false);
                return;
            }

            if (!isValidEmail(email.trim())) {
                renderResponse('resp-login', {success:false,message:'El email no tiene un formato válido',error:{email:'Formato inválido'}}, 'resp-login-status', '400 Bad Request', false);
                return;
            }

            // Password rules: min 8 chars, at least 1 uppercase and 1 number
            const hasMin = password.length >= 8;
            const hasUpper = /[A-Z]/.test(password);
            const hasNumber = /[0-9]/.test(password);
            if (!hasMin || !hasUpper || !hasNumber) {
                renderResponse('resp-login', {success:false,message:'La contraseña no cumple los requisitos de seguridad',error:{password:'Debe tener mínimo 8 caracteres, una mayúscula y un número'}}, 'resp-login-status', '400 Bad Request', false);
                return;
            }

            // Simulate success (in real app you'd call backend)
            renderResponse('resp-login', {success:true,message:'Login exitoso',data:{nombreDeUsuario: email.split('@')[0]}}, 'resp-login-status', '200 OK', true);
        }

        // Handler for Registro form
        function handleRegistro(e) {
            e.preventDefault();
            const nombre = (document.getElementById('registro-nombre')||{}).value || '';
            const email = (document.getElementById('registro-email')||{}).value || '';
            const password = (document.getElementById('registro-password')||{}).value || '';

            // Missing fields
            const missing = [];
            if (!nombre.trim()) missing.push('nombre');
            if (!email.trim()) missing.push('email');
            if (!password) missing.push('password');
            if (missing.length) {
                renderResponse('resp-registro', {success:false,message:'Datos incompletos',error:{fields: missing}}, 'resp-registro-status', '400 Bad Request', false);
                return;
            }

            // Length validation
            const lengthErrors = {};
            if (nombre.trim().length > 100) lengthErrors.nombre = 'Longitud no permitida';
            if (email.trim().length > 180) lengthErrors.email = 'Longitud no permitida';
            if (password.length > 255) lengthErrors.password = 'Longitud no permitida';
            if (Object.keys(lengthErrors).length > 0) {
                renderResponse('resp-registro', {success:false,message:'Longitud de campo inválida',error: lengthErrors}, 'resp-registro-status', '400 Bad Request', false);
                return;
            }

            if (!isValidEmail(email.trim())) {
                renderResponse('resp-registro', {success:false,message:'El correo electrónico no tiene un formato válido',error:{email:'Formato inválido'}}, 'resp-registro-status', '400 Bad Request', false);
                return;
            }

            // Password rules: min 8 chars
            if (password.length < 8) {
                renderResponse('resp-registro', {success:false,message:'La contraseña no cumple con los requisitos',error:{password:'Debe tener al menos 8 caracteres'}}, 'resp-registro-status', '400 Bad Request', false);
                return;
            }

            // Simulate success (in real app you'd call backend)
            const token = 'abc123def456' + Math.random().toString(36).substr(2, 9);
            const fechaCreacion = new Date().toISOString().slice(0, 19).replace('T', ' ');
            renderResponse('resp-registro', {success:true,message:'Registro exitoso',data:{token: token, fechaCreacion: fechaCreacion}}, 'resp-registro-status', '201 Created', true);
        }

        // Handler for Logout form
        function handleLogout(e) {
            e.preventDefault();
            const token = (document.getElementById('logout-token')||{}).value || '';

            // Missing token
            if (!token.trim()) {
                renderResponse('resp-logout', {success:false,message:'Token de usuario requerido',error:{tokenUsuario: 'Campo obligatorio'}}, 'resp-logout-status', '400 Bad Request', false);
                return;
            }

            // Token format validation (64 hex chars)
            if (!/^[a-f0-9]{64}$/i.test(token.trim())) {
                renderResponse('resp-logout', {success:false,message:'Token inválido',error:{}}, 'resp-logout-status', '401 Unauthorized', false);
                return;
            }

            // Simulate success (in real app you'd call backend)
            renderResponse('resp-logout', {success:true,message:'salida exitosa',data:{}}, 'resp-logout-status', '200 OK', true);
        }

        // Handler for Perfil form
        function handlePerfil(e) {
            e.preventDefault();
            const token = (document.getElementById('perfil-token')||{}).value || '';

            // Missing token
            if (!token.trim()) {
                renderResponse('resp-perfil', {success:false,message:'Token de usuario requerido',error:{tokenUsuario: 'Campo obligatorio'}}, 'resp-perfil-status', '400 Bad Request', false);
                return;
            }

            // Token format validation (64 hex chars)
            if (!/^[a-f0-9]{64}$/i.test(token.trim())) {
                renderResponse('resp-perfil', {success:false,message:'Token inválido',error:{}}, 'resp-perfil-status', '401 Unauthorized', false);
                return;
            }

            // Simulate success (in real app you'd call backend)
            const fechaCreacion = new Date().toISOString().slice(0, 19).replace('T', ' ');
            renderResponse('resp-perfil', {success:true,message:'Datos devueltos correctamente',data:{nombre:'Juan Pérez',localización:'40.7128, -74.0060',imagenAvatar:'https://example.com/avatar.jpg',biografia:'Desarrollador web apasionado',fechaCreacion:fechaCreacion}}, 'resp-perfil-status', '200 OK', true);
        }

        // Handler for Editar Perfil form
        function handleEditarPerfil(e) {
            e.preventDefault();
            const token = (document.getElementById('editar-perfil-token')||{}).value || '';
            const nombre = (document.getElementById('editar-perfil-nombre')||{}).value || '';
            const avatar = (document.getElementById('editar-perfil-avatar')||{}).value || '';
            const biografia = (document.getElementById('editar-perfil-biografia')||{}).value || '';
            const passwordActual = (document.getElementById('editar-perfil-password-actual')||{}).value || '';
            const passwordNueva = (document.getElementById('editar-perfil-password-nueva')||{}).value || '';

            // Missing token
            if (!token.trim()) {
                renderResponse('resp-editar-perfil', {success:false,message:'Token de usuario requerido',error:{tokenUsuario: 'Campo obligatorio'}}, 'resp-editar-perfil-status', '400 Bad Request', false);
                return;
            }

            // Token format validation (64 hex chars)
            if (!/^[a-f0-9]{64}$/i.test(token.trim())) {
                renderResponse('resp-editar-perfil', {success:false,message:'Token inválido o expirado',error:{}}, 'resp-editar-perfil-status', '401 Unauthorized', false);
                return;
            }

            // Biografia length validation
            if (biografia.trim().length > 255) {
                renderResponse('resp-editar-perfil', {success:false,message:'La biografía excede la longitud permitida',error:{biografia:'Máximo 255 caracteres'}}, 'resp-editar-perfil-status', '400 Bad Request', false);
                return;
            }

            // Password change validation
            if (passwordNueva.trim()) {
                // If new password provided, current password is required
                if (!passwordActual.trim()) {
                    renderResponse('resp-editar-perfil', {success:false,message:'Contraseña incorrecta',error:{passwordActual:'No coincide con la registrada'}}, 'resp-editar-perfil-status', '401 Unauthorized', false);
                    return;
                }

                // New password must be at least 8 characters
                if (passwordNueva.trim().length < 8) {
                    renderResponse('resp-editar-perfil', {success:false,message:'La nueva contraseña no cumple con los requisitos',error:{passwordNueva:'Debe tener al menos 8 caracteres'}}, 'resp-editar-perfil-status', '400 Bad Request', false);
                    return;
                }

                // Simulate wrong current password (random chance)
                if (Math.random() < 0.3) {
                    renderResponse('resp-editar-perfil', {success:false,message:'Contraseña incorrecta',error:{passwordActual:'No coincide con la registrada'}}, 'resp-editar-perfil-status', '401 Unauthorized', false);
                    return;
                }
            }

            // Simulate user not found (random chance)
            if (Math.random() < 0.1) {
                renderResponse('resp-editar-perfil', {success:false,message:'Usuario no encontrado',error:{}}, 'resp-editar-perfil-status', '404 Not Found', false);
                return;
            }

            // Simulate database error (random chance)
            if (Math.random() < 0.05) {
                renderResponse('resp-editar-perfil', {success:false,message:'No se pudieron actualizar los datos del usuario',error:{data:'Error al persistir la información'}}, 'resp-editar-perfil-status', '409 Conflict', false);
                return;
            }

            // Simulate success (in real app you'd call backend)
            renderResponse('resp-editar-perfil', {success:true,message:'Datos actualizados correctamente',data:{}}, 'resp-editar-perfil-status', '200 OK', true);
        }

