            e.preventDefault();
            const token = (document.getElementById('actualizar-token')||{}).value || '';
            const tipo = document.getElementById('actualizar-tipo').value;

            // Missing token
            if (!token.trim()) {
                renderResponse('resp-actualizar', {success:false,message:'Datos incompletos',error:{fields: ['tokenUsuario']}}, 'resp-actualizar-status', '400 Bad Request', false);
                return;
