        function toggleActualizarFields() {
            const tipo = document.getElementById('actualizar-tipo').value;
            const geoFields = document.getElementById('fields-geolocalizacion');
            const chatFields = document.getElementById('fields-chat');
            
            if (tipo === 'geolocalizacion') {
                geoFields.style.display = 'block';
                chatFields.style.display = 'none';
            } else {
                geoFields.style.display = 'none';
                chatFields.style.display = 'block';
            }
