                return;
            }

            // Token format validation (64 hex chars)
            if (!/^[a-f0-9]{64}$/i.test(token.trim())) {
                renderResponse('resp-home', {success:false,message:'Token de usuario inválido',error:null}, 'resp-home-status', '401 Unauthorized', false);
