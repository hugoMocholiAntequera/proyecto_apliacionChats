            background: #475569;
            color: white;
        }

        pre {
            margin: 0 !important;
            padding: 1rem !important;
            background: transparent !important;
        }

        .validation-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin: 1rem 0;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

